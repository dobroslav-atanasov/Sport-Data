@page
@model LoginModel

@{
    ViewData["Title"] = "Sign in";
}

<h2 class="text-center login-header">@ViewData["Title"] to Sport Data</h2>
<div class="row">
    <div class="col-md-4 offset-md-4 login-page-form">
        <section>
            <form id="account" method="post">
                <div class="row">
                    <div class="col-md-3 offset-md-2">
                        <a class="btn btn-primary" asp-area="Identity" asp-page="/Accountr/Login">
                            Sign in
                        </a>
                    </div>
                    <div class="col-md-3 offset-md-2">
                        <a class="btn btn-light" asp-area="Identity" asp-page="/Account/Register">
                            Sign&nbsp;up
                        </a>
                    </div>
                </div>
                <br />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input class="form-control" asp-for="Input.Email" autocomplete="off" aria-required="true" placeholder="email@example.com" />
                    <label class="form-lable" asp-for="Input.Email">Email</label>
                    <span class="text-danger" asp-validation-for="Input.Email"></span>
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" asp-for="Input.Password" autocomplete="off" aria-required="true" placeholder="password" />
                    <label class="form-label" asp-for="Input.Password">Password</label>
                    <span class="text-danger" asp-validation-for="Input.Password"></span>
                </div>
                <div>
                    <p class="text-end">
                        <small>
                            <a id="forgot-password" asp-area="Identity" asp-page="/Account/ForgotPassword">Forgot your password?</a>
                        </small>
                    </p>
                </div>
                <div class="checkbox mb-3">
                    <label class="form-label" asp-for="Input.RememberMe">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(x => x.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Sign in</button>
                </div>
            </form>
        </section>

        <br />
        <div class="text-center">
            New to Sport Data? <a asp-area="Identity" asp-page="/Account/Register">Create an account.</a>
        </div>
        <br />

        <div>
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                <div>
                    <p>
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="w-100 btn btn-lg btn-light" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><i class="fa-brands fa-google fa-xs"></i> @provider.DisplayName</button>
                        }
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
